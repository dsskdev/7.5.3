@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
	Layout = "master.cshtml";
}
<div class="">
	 <div class="">
	@{Html.RenderPartial("Breadcrumb");}
	</hr>
 </div>
 <div class="">
	@{Html.RenderPartial("Siblings");}
 </div>
 <div class="mdl-grid">
	 <div class="mdl-layout-spacer"></div>
 	<div class="mdl-cell mdl-cell--6-col mdl-shadow--2dp">
	@{
		if(Model.Content.HasValue("image"))
		{
			var imagePath = Model.Content.GetPropertyValue<string>("image");
			<img class="img-responsive" src="@Umbraco.Media(imagePath).Url" alt="@Umbraco.Media(imagePath).UrlName"/>
		}
	}
	 <div class="mdl-card__title mdl-card--expand">
			<h1 class="mdl-card__title-text">@Umbraco.Field("heading")</h1>
	</div>
	 <div class="mdl-card__title mdl-card--expand">
			<h2 class="mdl-card__title-text">@Umbraco.Field("location")</h2>
	</div>
			<div class="mdl-card__supporting-text">
				<p>Start Date : @Umbraco.Field("start", formatAsDate:true)</p>
				<p>Start Time : @Convert.ToDateTime(@Umbraco.Field("start").ToString()).ToString("hh:mm")</p>
				<p>End Date : @Umbraco.Field("endDate", formatAsDate:true)</p>
				<p>end Time : @Convert.ToDateTime(@Umbraco.Field("endDate").ToString()).ToString("hh:mm")</p>
 				@Umbraco.Field("endDate", formatAsDateWithTime: true, formatAsDateWithTimeSeparator: "End Time")
		 		@Umbraco.Field("mainContent")
		 	</div>
	</div>

				<div class="mdl-layout-spacer"></div>
					
 </div>
</div>